                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/users/children",
              "host": ["{{baseUrl}}"],
              "path": ["users", "children"]
            }
          }
        },
        {
          "name": "Create Child",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.data && jsonData.data.id) {",
                  "        pm.collectionVariables.set('childId', jsonData.data.id);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Anak Pertama\",\n  \"nickname\": \"Adik\",\n  \"birthDate\": \"2020-01-15\",\n  \"gender\": \"male\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/users/children",
              "host": ["{{baseUrl}}"],
              "path": ["users", "children"]
            }
          }
        },
        {
          "name": "Get Child by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/users/children/{{childId}}",
              "host": ["{{baseUrl}}"],
              "path": ["users", "children", "{{childId}}"]
            }
          }
        }
      ]
    },
